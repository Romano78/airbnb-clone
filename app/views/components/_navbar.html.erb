<div class="border-bottom p-3 position-relative bg-light">
    <div class='row justify-content-between align-items-center'>        
        <div class='pl-3'>
          <%= link_to "/" do %>
                <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png", class:'logo-nav' %> 
            <% end %>
        </div>
        <div class='pr-3 d-flex align-items-center'>
            <%= simple_form_for :search, url: flats_path, method: :get do |f| %>
                    <input
                        class="search-input"
                        id="input-value"
                        type="text"
                        name="search"
                        id="search"
                        placeholder="Search..."
                    />
                    <button class="search-btn" >
                        <i class="fas fa-search"></i>
                    </button>
            <% end %>
            <%= link_to 'All Flats', flats_path, class: 'nav-button' %>
            <%= link_to 'Create Flat', new_flat_path, class: 'nav-button' %>
            <%= simple_form_for :search, url: root_path, method: :get do |f| %>
            <% end %>
            <% if user_signed_in? %>
                <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                                <% if current_user.avatar.attached? %>
                                    <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                                <% else %>
                                    <%= image_tag "https://source.unsplash.com/XHVpWcr5grQ/200x200", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                                <% end %>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
                            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
                            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                            </div>
                        </li>
                        </ul>
                    </div>
                </div>  
            <% else %>
                <%= link_to 'Login', new_user_session_path, class: "nav-button" %>
            <% end %>
        </div>
    </div>
</div>